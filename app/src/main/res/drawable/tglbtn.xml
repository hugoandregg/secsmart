<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="4dp"
                />
            <solid
                android:color="#19FF19"
                />
            <padding
                android:left="25dp"
                android:top="0dp"
                android:right="25dp"
                android:bottom="0dp"
                />

            <stroke
                android:width="3dp"
                android:color="#878787"
                />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="4dp"
                />
            <solid
                android:color="#FF0000"
                />
            <padding
                android:left="7dp"
                android:top="0dp"
                android:right="7dp"
                android:bottom="0dp"
                />

            <stroke
                android:width="3dp"
                android:color="#878787"
                />
        </shape>
    </item>
</selector>